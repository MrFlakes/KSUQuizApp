<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondFragment"
    android:background="@color/ksu_yellow">

    <include
        android:id="@+id/include"
        layout="@layout/header_and_footer" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:background="@color/ksu_black"
        android:padding="10sp"
        android:text="What is the name of the library located on  the Marietta campus?"
        android:textAlignment="center"
        android:textColor="@color/ksu_white"
        android:textSize="25sp"
        android:fontFamily="@font/montserrat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="What is the name of the library located on  the Marietta campus?" />

    <Button
        android:id="@+id/button_1"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginStart="-200dp"
        android:layout_marginBottom="400dp"
        android:fontFamily="@font/montserrat"
        android:text="Lawrence V. Johnson Library"
        android:textColor="@color/ksu_white"
        android:textSize="15sp"
        app:backgroundTint="@color/ksu_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_2"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginEnd="-200dp"
        android:layout_marginBottom="400dp"
        android:fontFamily="@font/montserrat"
        android:text="Rossbacher Library"
        android:textColor="@color/ksu_white"
        android:textSize="15sp"
        app:backgroundTint="@color/ksu_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <Button
        android:id="@+id/button_3"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginStart="-200dp"
        android:layout_marginBottom="300dp"
        android:fontFamily="@font/montserrat"
        android:text="Horace W. Sturgis Library"
        android:textColor="@color/ksu_white"
        android:textSize="15sp"
        app:backgroundTint="@color/ksu_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_4"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginEnd="-200dp"
        android:layout_marginBottom="300dp"
        android:fontFamily="@font/montserrat"
        android:text="Joe Mack Wilson Library"
        android:textColor="@color/ksu_white"
        android:textSize="15sp"
        app:backgroundTint="@color/ksu_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="352dp"
        android:layout_height="274dp"
        android:layout_marginStart="-50dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/new_logo__png_"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="176dp"
        android:layout_height="134dp"
        android:layout_marginEnd="-400dp"
        android:layout_marginBottom="-225dp"
        android:fontFamily="@font/montserrat"
        android:text="Do You Know\nKSU?"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/ksu_black"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toStartOf="@+id/include" />

</androidx.constraintlayout.widget.ConstraintLayout>